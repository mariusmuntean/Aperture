<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:apertureView="clr-namespace:ApertureView;assembly=ApertureView"
             ios:Page.UseSafeArea="True"
             mc:Ignorable="d"
             x:Class="Aperture.Pages.Cool">

    <ContentPage.Resources>
        <OnPlatform x:TypeArguments="ImageSource"
                    x:Key="cool">
            <On Platform="Android"
                Value="cool"></On>
            <On Platform="iOS"
                Value="cool.jpg"></On>
            <On Platform="UWP"
                Value="Assets/cool.jpg"></On>
        </OnPlatform>

        <OnPlatform x:TypeArguments="ImageSource"
                    x:Key="xamarin">
            <On Platform="Android"
                Value="xamarin"></On>
            <On Platform="iOS"
                Value="xamarin.jpg"></On>
            <On Platform="UWP"
                Value="Assets/xamarin.jpg"></On>
        </OnPlatform>
    </ContentPage.Resources>

    <Grid>
        <Image x:Name="CoolImage"
               Source="{StaticResource cool}"
               Margin="0"
               Aspect="AspectFill" />

        <apertureView:ApertureView x:Name="Aperture"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   WidthRequest="185"
                                   HeightRequest="185"
                                   ApertureOpening="0.0"
                                   ApertureColor="Black"
                                   TranslationY="-15">
            <apertureView:ApertureView.ContentView>
                <Image Source="{StaticResource xamarin}"
                       Aspect="AspectFill"></Image>
            </apertureView:ApertureView.ContentView>
        </apertureView:ApertureView>

        <StackLayout VerticalOptions="End"
                     Margin="16"
                     IsVisible="False">
            <Label HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Text="{Binding Source={x:Reference BladeSizeValue}, Path=Value}"></Label>
            <Slider x:Name="BladeSizeValue"
                    ThumbColor="White"
                    MaximumTrackColor="Black"
                    MinimumTrackColor="GhostWhite"
                    Margin="10"
                    Maximum="1.0"
                    Minimum="0.0"
                    Value="{Binding Source={x:Reference Aperture}, Path=ApertureOpening, Mode=TwoWay}"
                    Visual="Material" />
        </StackLayout>

        <Button x:Name="ShutterButton"
                Margin="15"
                BackgroundColor="White"
                BorderColor="Aqua"
                HeightRequest="23"
                WidthRequest="23"
                CornerRadius="12"
                VerticalOptions="End"
                HorizontalOptions="Center"></Button>
    </Grid>
</ContentPage>